<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
    android:background="#ffffc90e">

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#123456">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_horizontal"
        android:id="@+id/log_in">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log_In Session"
            android:id="@+id/textView"
            android:background="#ff514759"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="normal|bold|italic"
            android:textIsSelectable="true"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:layout_weight="3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@mipmap/ic_lo1"
            android:layout_gravity="center"
            android:layout_marginTop="35dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:id="@+id/textView3"
                android:textSize="40dp"
                android:textColor="#fffefff5"
                android:singleLine="false"
                android:layout_weight="0.04" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/editText2"
                android:layout_weight="0.65"
                android:clickable="true"
                android:autoText="false"
                android:textColor="#ffffffff"
                android:hint="ID를 입력하세요"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:id="@+id/password_box">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:id="@+id/textView2"
                android:textSize="25dp"
                android:textColor="#fffefff5"
                android:singleLine="false"
                android:textIsSelectable="true"
                android:layout_weight="0.1"
                android:gravity="left"
                android:textStyle="bold" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/editText"
                android:layout_weight="1.10"
                android:clickable="true"
                android:password="true"
                android:hint="비밀번호를 입력하세요"
                android:inputType="textPassword"
                android:textColor="#ffffffff" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:id="@+id/button"
            android:onClick="on1clicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:id="@+id/entry" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GUEST"
            android:id="@+id/button3" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created By SPLUG"
        android:id="@+id/created"
        android:textSize="25dp"
        android:background="#ff514759"
        android:textColor="#ffffffff"
        android:textIsSelectable="false"
        android:layout_marginBottom="0dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:gravity="center" />


</LinearLayout>
